<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/content"
    android:layout_width="610dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/id_has_net_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_amount_receivable"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="应收金额："
            android:textColor="#FF3F3F3F"
            android:textSize="@dimen/text_size_22" />

        <TextView
            android:id="@+id/id_total"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/id_amount_receivable"
            android:gravity="center_horizontal"
            android:text="合计："
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_22" />

        <TextView
            android:id="@+id/id_discount"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/id_total"
            android:gravity="right"
            android:text="优惠："
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_22" />

        <View
            android:id="@+id/id_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/id_amount_receivable"
            android:layout_marginTop="20dp"
            android:background="#FFD8D8D8" />

        <TextView
            android:id="@+id/id_amount_receivable_tip"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_line_1"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:text="实收金额："
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_22" />

        <EditText
            android:id="@+id/id_money_received"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/id_amount_receivable_tip"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_rectangle_f5a623_5"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:singleLine="true"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/id_change_tip"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_line_1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/id_amount_receivable_tip"
            android:text="找零："
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_22" />

        <TextView
            android:id="@+id/id_change"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/id_change_tip"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/id_money_received"
            android:background="@drawable/shape_rectangle_radius_49c787"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_size_30" />

        <LinearLayout
            android:layout_width="610dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_money_received"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_num_1"
                    style="@style/NumButton_1"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_num_4"
                    style="@style/NumButton_1"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_num_7"
                    style="@style/NumButton_1"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_num_0"
                    style="@style/NumButton_1"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_num_2"
                    style="@style/NumButton_1"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_num_5"
                    style="@style/NumButton_1"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_num_8"
                    style="@style/NumButton_1"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_num_00"
                    style="@style/NumButton_1"
                    android:text="00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_num_3"
                    style="@style/NumButton_1"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_num_6"
                    style="@style/NumButton_1"
                    android:text="6" />

                <Button
                    android:id="@+id/btn_num_9"
                    style="@style/NumButton_1"
                    android:text="9" />

                <Button
                    android:id="@+id/btn_num_dot"
                    style="@style/NumButton_1"
                    android:text="." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_num_delete"
                    style="@style/NumButton_1"
                    android:src="@mipmap/ic_keybroad_delete" />

                <Button
                    android:id="@+id/btn_num_clear"
                    style="@style/NumButton_1"
                    android:text="清空"
                    android:textSize="@dimen/text_size_24" />

                <Button
                    android:id="@+id/btn_num_config"
                    style="@style/NumButton_1"
                    android:layout_weight="2.1"
                    android:background="@drawable/shape_rectangle_solid_ff725c"
                    android:text="确认"
                    android:textSize="@dimen/text_size_24" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_no_net_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/id_no_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ic_no_net"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10dp" />
    </RelativeLayout>
</RelativeLayout>

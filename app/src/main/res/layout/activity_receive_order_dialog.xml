<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="964dp"
    android:layout_height="2000dp">

    <LinearLayout
        android:id="@+id/vg_rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="309"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="35dp">

                    <TextView
                        android:id="@+id/tv_order_all_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:text="商品数量：- -"
                        android:textColor="#FF444444"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_order_all_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:text="实付金额：- -"
                        android:textColor="#FF444444"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_order_add_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:text="下单时间：- -"
                        android:textColor="#FF444444"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="88dp"
                    android:background="#B4B4B4" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="444"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="35dp">

                    <TextView
                        android:id="@+id/tv_order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:text="收货人：- -"
                        android:textColor="#FF444444"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_order_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:text="电话：- -"
                        android:textColor="#FF444444"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_order_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:text="配送地址：- -"
                        android:textColor="#FF444444"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="209"
                    android:background="#FFF7F8FC"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_rectangle_stroke_b4b4b4_5"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="#FF4F4F4F"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_config"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_rectangle_ff725c_5"
                        android:gravity="center"
                        android:text="查看"
                        android:textColor="#FFFFFFFF"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>
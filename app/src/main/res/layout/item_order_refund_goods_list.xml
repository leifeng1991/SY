<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_Non_refundable_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F8FC"
        android:paddingBottom="18dp"
        android:paddingLeft="33dp"
        android:paddingTop="18dp"
        android:text="不可退商品"
        android:textColor="#FF282828"
        android:textSize="18sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/id_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFE3E3E3">

        <LinearLayout
            android:id="@+id/id_check_all_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:gravity="center">

            <TextView
                android:id="@+id/id_check_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="选择"
                android:textColor="#FF282828"
                android:textSize="@dimen/text_size_18"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/id_check_image"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/ic_check_normal"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#FFB4B4B4" />

        <TextView
            android:id="@+id/id_line_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="97"
            android:gravity="center"
            android:text="行号"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFB4B4B4" />

        <TextView
            android:id="@+id/id_goods_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="253"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="商品名称"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFB4B4B4" />

        <TextView
            android:id="@+id/id_buy_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="138"
            android:gravity="center"
            android:text="购买单价"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFB4B4B4" />

        <TextView
            android:id="@+id/id_buy_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="138"
            android:gravity="center"
            android:text="购买总数"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFB4B4B4" />

        <TextView
            android:id="@+id/id_refund_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="138"
            android:gravity="center"
            android:text="可退货总数"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFB4B4B4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="256"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_refund_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="本次退款数量"
                android:textColor="#FF282828"
                android:textSize="@dimen/text_size_18"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/id_refund_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/id_subtract"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/shape_rectangle_b3b3b3_6"
                    android:gravity="center"
                    android:text="－"
                    android:textColor="#b3b3b3"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/id_current_refund_number"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_rectangle_b3b3b3_6"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FF444444" />

                <TextView
                    android:id="@+id/id_add"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/shape_rectangle_b3b3b3_6"
                    android:gravity="center"
                    android:text="＋"
                    android:textColor="#b3b3b3"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFB4B4B4" />

        <TextView
            android:id="@+id/id_subtotal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="150"
            android:gravity="center"
            android:text="小计"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vg_number_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/id_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shape_rectangle_stroke_b4b4b4"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/id_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="17dp"
                android:hint="输入商品货号"
                android:textColor="#FFBBBBBB"
                android:textSize="@dimen/text_size_18"
                android:inputType="numberDecimal"
                android:background="@null"/>

            <RelativeLayout
                android:id="@+id/id_search"
                android:layout_width="59dp"
                android:layout_height="58dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="1dp"
                android:background="@drawable/shape_stroke_ffeae2"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@mipmap/ic_search_icon" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_num_1"
                style="@style/NumButton"
                android:text="1" />

            <Button
                android:id="@+id/btn_num_4"
                style="@style/NumButton"
                android:text="4" />

            <Button
                android:id="@+id/btn_num_7"
                style="@style/NumButton"
                android:text="7" />

            <Button
                android:id="@+id/btn_num_0"
                style="@style/NumButton"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_num_2"
                style="@style/NumButton"
                android:text="2" />

            <Button
                android:id="@+id/btn_num_5"
                style="@style/NumButton"
                android:text="5" />

            <Button
                android:id="@+id/btn_num_8"
                style="@style/NumButton"
                android:text="8" />

            <Button
                android:id="@+id/btn_num_00"
                style="@style/NumButton"
                android:text="00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_num_3"
                style="@style/NumButton"
                android:text="3" />

            <Button
                android:id="@+id/btn_num_6"
                style="@style/NumButton"
                android:text="6" />

            <Button
                android:id="@+id/btn_num_9"
                style="@style/NumButton"
                android:text="9" />

            <Button
                android:id="@+id/btn_num_dot"
                style="@style/NumButton"
                android:text="." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_num_delete"
                style="@style/NumButton"
                android:src="@mipmap/ic_keybroad_delete"/>

            <Button
                android:id="@+id/btn_num_clear"
                style="@style/NumButton"
                android:text="清空"
                android:textSize="@dimen/text_size_24" />

            <Button
                android:id="@+id/btn_num_config"
                style="@style/NumButton"
                android:layout_weight="2.1"
                android:background="@drawable/shape_rectangle_solid_ff725c"
                android:text="确认"
                android:textSize="@dimen/text_size_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

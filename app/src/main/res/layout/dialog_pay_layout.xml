<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="810dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/id_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                app:tabBackground="@drawable/selector_tab_bg_color"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="0dp"
                app:tabMaxWidth="270dp"
                app:tabMinWidth="270dp"
                app:tabSelectedTextColor="#FF725C"
                app:tabTextColor="#282828"
                app:tabTextAppearance="@style/TabLayoutTextStyle"/>

            <com.xxzlkj.zhaolinshouyin.weight.CustomViewPager
                android:id="@+id/id_view_pager"
                android:layout_width="610dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/id_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@mipmap/ic_gray_close" />
</RelativeLayout>

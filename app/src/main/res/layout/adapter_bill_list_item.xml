<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_line_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center"
            android:text="行号"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b4b4b4" />

        <TextView
            android:id="@+id/id_order_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="220"
            android:gravity="center"
            android:text="订单号"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b4b4b4" />

        <TextView
            android:id="@+id/id_water_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140"
            android:gravity="center"
            android:text="流水类型"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b4b4b4" />

        <TextView
            android:id="@+id/id_pay_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140"
            android:gravity="center"
            android:text="支付方式"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b4b4b4" />

        <TextView
            android:id="@+id/id_amount_paid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140"
            android:gravity="center"
            android:text="实付金额"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b4b4b4" />

        <TextView
            android:id="@+id/id_order_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="190"
            android:gravity="center"
            android:text="下单时间"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

    <View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b4b4b4" />
</LinearLayout>

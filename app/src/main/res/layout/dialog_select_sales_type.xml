<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="602dp"
        android:layout_height="335dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_f7f8fc_16"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:text="选择退货方式"
                android:textColor="#FF282828"
                android:textSize="@dimen/text_size_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B4B4B4" />

            <RadioGroup
                android:id="@+id/id_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/id_item_return"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:button="@drawable/selector_check"
                    android:checked="true"
                    android:paddingLeft="20dp"
                    android:text="单品退货"
                    android:textColor="#FF282828"
                    android:textSize="@dimen/text_size_24" />

                <RadioButton
                    android:id="@+id/id_order_return"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_weight="1"
                    android:button="@drawable/selector_check"
                    android:paddingLeft="20dp"
                    android:text="订单退货"
                    android:textColor="#FF282828"
                    android:textSize="@dimen/text_size_24" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp">

                <Button
                    android:id="@+id/id_cancel"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_rectangle_stroke_b4b4b4"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#FF4F4F4F"
                    android:textSize="@dimen/text_size_20" />

                <Button
                    android:id="@+id/id_sure"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_rectangle_ff725c_5"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/text_size_20" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

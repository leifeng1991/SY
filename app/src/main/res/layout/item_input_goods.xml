<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-1dp"
    android:layout_marginRight="-1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_id"
            style="@style/InputGoodsItem"
            android:text="编号" />

        <TextView
            android:id="@+id/tv_goods_code"
            style="@style/InputGoodsItem"
            android:text="货号" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/InputGoodsItem"
            android:layout_weight="2.31"
            android:text="商品标题" />


        <RelativeLayout style="@style/InputGoodsItem">

            <ImageView
                android:id="@+id/iv_weight_bg"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_rectangle_b4b4b4" />

            <TextView
                android:id="@+id/tv_num"
                style="@style/InputGoodsItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="商品数量" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_prices"
            style="@style/InputGoodsItem"
            android:text="商品原价" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/InputGoodsItem"
            android:text="商品现价" />

        <TextView
            android:id="@+id/tv_all_price"
            style="@style/InputGoodsItem"
            android:text="商品总价" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_weighting_finish"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_rectangle_b4b4b4"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/black_444444"
        android:textSize="18sp" />
</RelativeLayout>
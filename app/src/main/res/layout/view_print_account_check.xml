<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="· 兆邻便利店 ·"
            android:textColor="#FF444444"
            android:textSize="38sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center">

            <View
                android:layout_width="45dp"
                android:layout_height="1px"
                android:background="#000" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#FF444444"
                android:textSize="20sp" />

            <View
                android:layout_width="45dp"
                android:layout_height="1px"
                android:background="#000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对账时间："
                    android:textColor="#FF444444"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/id_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="开始时间："
                    android:textColor="#FF444444"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="收银员："
                    android:textColor="#FF444444"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_account_check_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="2017-08-02 12:16"
                    android:textColor="#FF444444"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/id_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="2017-08-02 12:16"
                    android:textColor="#FF444444"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/id_cashier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#FF444444"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:text="************************************************************************"
            android:textColor="#FF444444"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/id_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="对账详情"
            android:textColor="#FF444444"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/accountCheckTextView"
                    android:layout_weight="78" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-0.5dp"
                    android:layout_weight="300"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/accountCheckTextView"
                            android:text="收款"
                            android:textSize="@dimen/text_size_20" />

                        <TextView
                            style="@style/accountCheckTextView"
                            android:layout_marginLeft="-0.5dp"
                            android:text="退款"
                            android:textSize="@dimen/text_size_20" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/accountCheckTextView"
                            android:layout_marginTop="-0.5dp"
                            android:layout_weight="60"
                            android:text="笔数"
                            android:textSize="@dimen/text_size_18" />

                        <TextView
                            style="@style/accountCheckTextView"
                            android:layout_marginLeft="-0.5dp"
                            android:layout_marginTop="-0.5dp"
                            android:layout_weight="90"
                            android:text="金额"
                            android:textSize="@dimen/text_size_18" />

                        <TextView
                            style="@style/accountCheckTextView"
                            android:layout_marginLeft="-0.5dp"
                            android:layout_marginTop="-0.5dp"
                            android:layout_weight="60"
                            android:text="笔数"
                            android:textSize="@dimen/text_size_18" />

                        <TextView
                            style="@style/accountCheckTextView"
                            android:layout_marginLeft="-0.5dp"
                            android:layout_marginTop="-0.5dp"
                            android:layout_weight="90"
                            android:text="金额"
                            android:textSize="@dimen/text_size_18" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.5dp"
                android:minHeight="40dp">

                <TextView
                    style="@style/accountCheckTextView"
                    android:layout_weight="78"
                    android:text="现金"
                    android:textSize="@dimen/text_size_20" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-0.5dp"
                    android:layout_weight="300"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_cash_receipt_number"
                        style="@style/accountCheckTextView"
                        android:layout_weight="60" />

                    <TextView
                        android:id="@+id/id_cash_receivable_amount"
                        style="@style/accountCheckTextView"
                        android:layout_marginLeft="-0.5dp"
                        android:layout_weight="90" />

                    <TextView
                        android:id="@+id/id_cash_refund_number"
                        style="@style/accountCheckTextView"
                        android:layout_marginLeft="-0.5dp"
                        android:layout_weight="60" />

                    <TextView
                        android:id="@+id/id_cash_refund_amount"
                        style="@style/accountCheckTextView"
                        android:layout_marginLeft="-0.5dp"
                        android:layout_weight="90" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.5dp"
                android:minHeight="40dp">

                <TextView
                    style="@style/accountCheckTextView"
                    android:layout_weight="78"
                    android:text="支付宝"
                    android:textSize="@dimen/text_size_20" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-0.5dp"
                    android:layout_weight="300"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_zfb_receipt_number"
                        style="@style/accountCheckTextView"
                        android:layout_weight="60" />

                    <TextView
                        android:id="@+id/id_zfb_receivable_amount"
                        style="@style/accountCheckTextView"
                        android:layout_marginLeft="-0.5dp"
                        android:layout_weight="90" />

                    <TextView
                        android:id="@+id/id_zfb_refund_number"
                        style="@style/accountCheckTextView"
                        android:layout_marginLeft="-0.5dp"
                        android:layout_weight="60" />

                    <TextView
                        android:id="@+id/id_zfb_refund_amount"
                        style="@style/accountCheckTextView"
                        android:layout_marginLeft="-0.5dp"
                        android:layout_weight="90" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.5dp"
                android:minHeight="40dp">

                <TextView
                    style="@style/accountCheckTextView"
                    android:layout_weight="78"
                    android:text="微信"
                    android:textSize="@dimen/text_size_20" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-0.5dp"
                    android:layout_weight="300"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_wx_receipt_number"
                        style="@style/accountCheckTextView"
                        android:layout_weight="60" />

                    <TextView
                        android:id="@+id/id_wx_receivable_amount"
                        style="@style/accountCheckTextView"
                        android:layout_marginLeft="-0.5dp"
                        android:layout_weight="90" />

                    <TextView
                        android:id="@+id/id_wx_refund_number"
                        style="@style/accountCheckTextView"
                        android:layout_marginLeft="-0.5dp"
                        android:layout_weight="60" />

                    <TextView
                        android:id="@+id/id_wx_refund_amount"
                        style="@style/accountCheckTextView"
                        android:layout_marginLeft="-0.5dp"
                        android:layout_weight="90" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/id_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="对账详情"
            android:textColor="#FF444444"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                style="@style/accountCheckTextView"
                android:layout_weight="1"
                android:text="现金"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/id_cash_total"
                style="@style/accountCheckTextView"
                android:layout_marginLeft="-0.5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-0.5dp"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_account_total_tip"
                style="@style/accountCheckTextView"
                android:layout_weight="1"
                android:text="对账总额"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/id_account_total"
                style="@style/accountCheckTextView"
                android:layout_marginLeft="-0.5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-0.5dp"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                style="@style/accountCheckTextView"
                android:layout_weight="1"
                android:text="总笔数"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/id_total_number"
                style="@style/accountCheckTextView"
                android:layout_marginLeft="-0.5dp"
                android:layout_weight="1" />
        </LinearLayout>


        <TextView
            android:id="@+id/id_bottom_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="请核对好金额，保留好对账单"
            android:textColor="#FF444444"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_right_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal"
        android:background="@drawable/shape_rectangle_f7f8fc_8">

        <TextView
            android:id="@+id/id_goods_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="240"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="商品名称"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFB4B4B4" />

        <TextView
            android:id="@+id/id_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140"
            android:gravity="center"
            android:text="购买单价"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFB4B4B4" />

        <TextView
            android:id="@+id/id_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140"
            android:gravity="center"
            android:text="数量"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFB4B4B4" />

        <TextView
            android:id="@+id/id_subtotal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140"
            android:gravity="center"
            android:text="小计"
            android:textColor="#FF282828"
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

    <View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFB4B4B4" />
</LinearLayout>
